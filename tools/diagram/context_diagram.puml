@startuml context_diagram
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

' Title and Layout
title Context Diagram (Level 1) for Core Application

' Define the People
Person(user, "User", "The primary end-user who interacts with the system to consume services or data.")
Person(admin, "Admin", "A privileged user responsible for system configuration, user management, and operational oversight.")

' Define the External Systems
System_Ext(oauth_provider, "OAuth Provider", "External identity provider")
System_Ext(google_location, "Google Location Service", "External API used to resolve, validate, or store geospatial information.")

' Define the System Under Focus
System(core_app, "Core Application", "The primary system that manages data, user sessions, and business logic.")

' Define Relationships
Rel(user, core_app, "Uses", "Web Browser/Mobile App")
Rel(admin, core_app, "Uses", "Web Browser (Admin Tools)")

Rel_L(core_app, oauth_provider, "Uses for Sign-in", "OAuth 2.0 / API")
Rel_L(core_app, google_location, "Queries for Location Data", "HTTPS / API")
' Rel_L(core_app, media_system, "Stores and Retrieves Media", "HTTPS / API")

@enduml
