{
  "info": {
    "name": "Shrine Discovery",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for testing Shrine Discovery Service endpoints"
  },
  "item": [
    {
      "name": "RecommendShrine",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": {
            "user_id": "user123",
            "wish_text": "I wish for success in my career",
            "wish_category": "career",
            "latitude": 13.7563,
            "longitude": 100.5018,
            "max_distance_km": 10
          },
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{APIURL}}/shrine-discovery/recommend",
          "host": ["{{APIURL}}"],
          "path": ["shrine-discovery", "recommend"]
        },
        "description": "Get shrine recommendations based on user's wish and location"
      },
      "response": []
    },
    {
      "name": "GetNearbyShrine",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{APIURL}}/shrine-discovery/nearby?latitude=13.7563&longitude=100.5018&radius_km=10&sort_by=distance",
          "host": ["{{APIURL}}"],
          "path": ["shrine-discovery", "nearby"],
          "query": [
            {
              "key": "latitude",
              "value": "13.7563",
              "description": "Location latitude"
            },
            {
              "key": "longitude",
              "value": "100.5018",
              "description": "Location longitude"
            },
            {
              "key": "radius_km",
              "value": "10",
              "description": "Search radius in kilometers"
            },
            {
              "key": "sort_by",
              "value": "distance",
              "description": "Sort results by: popularity, rating, or distance"
            }
          ]
        },
        "description": "Find shrines near a specific location"
      },
      "response": []
    },
    {
      "name": "SearchShrinesByCategory",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{APIURL}}/shrine-discovery/search/category?category=love&latitude=13.7563&longitude=100.5018&province=Bangkok",
          "host": ["{{APIURL}}"],
          "path": ["shrine-discovery", "search"],
          "query": [
            {
              "key": "category",
              "value": "love",
              "description": "Category (love, career, wealth, health)"
            },
            {
              "key": "latitude",
              "value": "13.7563",
              "description": "Optional location latitude"
            },
            {
              "key": "longitude",
              "value": "100.5018",
              "description": "Optional location longitude"
            },
            {
              "key": "province",
              "value": "Bangkok",
              "description": "Optional province filter"
            }
          ]
        },
        "description": "Search shrines by category with optional location and province filters"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "APIURL",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}
