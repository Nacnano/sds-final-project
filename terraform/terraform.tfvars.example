# Terraform variable values
# Copy this file to terraform.tfvars and customize as needed

# Kubernetes Configuration
kubeconfig_path = "~/.kube/config"
namespace       = "microservices"

# Docker Registry (your master node IP)
docker_registry = "192.168.0.106:5000"
image_tag       = "latest"

# Master Node Configuration
master_node_hostname = "warissara-virtualbox"

# Database Credentials (CHANGE IN PRODUCTION!)
postgres_user     = "postgres"
postgres_password = "postgres"
jwt_secret        = "cr2YO0XOTY9t9Ijc6k59NU7KUnwn29uvIwzNfKXuiMItC+rAAOeDcDPjl6iq9+O+w9218kt584Zb5FwjWsDqYw=="

# Replica Configuration
api_gateway_replicas     = 2
frontend_replicas        = 2
shrine_service_replicas  = 2
location_service_replicas = 2

# Node Selector (arm64 for Raspberry Pi)
worker_node_arch = "arm64"

# HPA Configuration
enable_hpa        = true
hpa_max_replicas = 2
